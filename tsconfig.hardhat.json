{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "hardhat.config.cts",
    "scripts/**/*.cjs",
    "scripts/**/*.ts",
    "test/**/*.cts",
    "test/**/*.ts"
  ]
}